@model Web.Models.Home.NoteViewModel

@{
	string @title = "Add note";
	ViewBag.Title = @title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@title</h2>

@using (Html.BeginForm("Add", "Home", FormMethod.Post))
{
	<div>
		@Html.TextAreaFor(m => m.Text, new { @class = "note-editor" })
	</div>
	<div class="note-add">
		<button type="Submit">
			<i class="glyphicon glyphicon-ok"></i>
		</button>
	</div>
}
